        <jobs>            
			<reviewrating_reviewratingcron>
                <schedule><cron_expr>*/5 * * * *</cron_expr></schedule>
                <run><model>reviewrating/cron::reviewratingcron</model></run>
            </reviewrating_reviewratingcron>
        </jobs>
    </crontab> -->
</config> 
